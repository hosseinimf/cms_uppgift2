@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.NewBooks>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}


<div class="container">
    
    <h6 class="text-center mb-5">The list of new books which are added to the library after 2021-11-03 08:00</h6>
    
  <div class="row">
      
    <div class="col-sm d-flex justify-content-center"><!-------------------------------------col 1------->
            @{
            	var history = Umbraco.Content(2127)
                .ChildrenOfType("historyBooks")
                .Where(x => (x.CreateDate >= DateTime.Parse("11/3/2021 08:00:00")))
                .Where(x => x.IsVisible())
                .OrderByDescending(x => x.CreateDate);
            }
        	
        	<div class="text-center" style="margin-bottom: 250px;">
        	    <h3 class="mb-5">History</h3>
            	@foreach (var item in history)
            	{
            	    var image = item.Value<IPublishedContent>("bookImage");
            	    
            	        
                		<div class="card m-3 col d-flex justify-content-center" style="width: 15rem; height: 20rem;">
                              <img src="@image.Url()" class="card-img-top" alt="...">
                              
                              <div class="card-body">
                                <h3 class="card-title">@item.Value("bookTitle")</h3>
                                <h6 class="card-title">@item.Value("bookAuthor")</h6>
                              </div>
                              
                              <div class="d-flex justify-content-around">
                                  <a href="#" style="bottom: 0;" class="btn btn-primary w-50 m-2">Buy</a>
                                  <a href="@item.Url()" style="bottom: 0;" class="btn btn-secondary w-50 m-2">Details</a>
                              </div>
                               
                        </div>
            	}
            </div>
    </div>
    
    
    
    
    
    <div class="col-sm d-flex justify-content-center"><!-------------------------------------col 2------->
        @{
        	var economics = Umbraco.Content(2097)
            .ChildrenOfType("economicsBook")
            .Where(x => (x.CreateDate >= DateTime.Parse("11/3/2021 08:00:00")))
            .Where(x => x.IsVisible())
            .OrderByDescending(x => x.CreateDate);
        }


        <div class="text-center" style="margin-bottom: 250px;">
        	    <h3 class="mb-5">Economics</h3>
            	@foreach (var item in economics)
            	{
            	    var image = item.Value<IPublishedContent>("bookImage");
            	    
            	        
                		<div class="card m-3 col d-flex justify-content-center" style="width: 15rem; height: 20rem;">
                              <img src="@image.Url()" class="card-img-top" alt="...">
                              
                              <div class="card-body">
                                <h3 class="card-title">@item.Value("bookTitle")</h3>
                                <h6 class="card-title">@item.Value("bookAuthor")</h6>
                              </div>
                              
                              <div class="d-flex justify-content-around">
                                  <a href="#" style="bottom: 0;" class="btn btn-primary w-50 m-2">Buy</a>
                                  <a href="@item.Url()" style="bottom: 0;" class="btn btn-secondary w-50 m-2">Details</a>
                              </div>
                               
                        </div>
            	}
        </div>
    </div>
    
    
    
    
    <div class="col-sm d-flex justify-content-center"><!-------------------------------------col 3------->
      
      
        @{
        	var romance = Umbraco.Content(2119)
            .ChildrenOfType("romanceBook")
            .Where(x => (x.CreateDate >= DateTime.Parse("11/3/2021 08:00:00")))
            .Where(x => x.IsVisible())
            .OrderByDescending(x => x.CreateDate);
        }
        
        <div class="text-center" style="margin-bottom: 250px;">
        	    <h3 class="mb-5">Romance</h3>
            	@foreach (var item in romance)
            	{
            	    var image = item.Value<IPublishedContent>("bookImage");
            	    
            	        
                		<div class="card m-3 col d-flex justify-content-center" style="width: 15rem; height: 20rem;">
                              <img src="@image.Url()" class="card-img-top" alt="...">
                              
                              <div class="card-body">
                                <h3 class="card-title">@item.Value("bookTitle")</h3>
                                <h6 class="card-title">@item.Value("bookAuthor")</h6>
                              </div>
                              
                              <div class="d-flex justify-content-around">
                                  <a href="#" style="bottom: 0;" class="btn btn-primary w-50 m-2">Buy</a>
                                  <a href="@item.Url()" style="bottom: 0;" class="btn btn-secondary w-50 m-2">Details</a>
                              </div>
                               
                        </div>
            	}
        </div>


      
      
    </div>
    
  </div>
  
</div>